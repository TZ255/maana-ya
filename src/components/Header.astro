---
import { LOGO_IMAGE, SITE } from "@config";
import Hr from "./Hr.astro";
import LinkButton from "./LinkButton.astro";

export interface Props {
  activeNav?: "posts" | "tags" | "about" | "search";
}

const { activeNav } = Astro.props;
---

<header>
  <a id="skip-to-content" href="#main-content">Skip to content</a>
  <div class="nav-container">
    <div class="top-nav-wrap">
      <a href="/" class="logo text-nowrap nav-link-primary">
        {
          LOGO_IMAGE.enable ? (
            <img
              src={`/assets/${LOGO_IMAGE.svg ? "logo.svg" : "logo.png"}`}
              alt={SITE.title}
              width={LOGO_IMAGE.width}
              height={LOGO_IMAGE.height}
            />
          ) : (
            SITE.title
          )
        }
      </a>
      <nav id="nav-menu">
        <button
          class="hamburger-menu focus-outline"
          aria-label="Open Menu"
          aria-expanded="false"
          aria-controls="menu-items"
        >
          <svg
            xmlns="http://www.w3.org/2000/svg"
            width="24"
            height="24"
            viewBox="0 0 24 24"
            fill="none"
            stroke="currentColor"
            stroke-width="1.5"
            stroke-linecap="round"
            stroke-linejoin="round"
            class="menu-icon"
          >
            <line x1="7" y1="12" x2="21" y2="12" class="line"></line>
            <line x1="3" y1="6" x2="21" y2="6" class="line"></line>
            <line x1="12" y1="18" x2="21" y2="18" class="line"></line>
            <line x1="18" y1="6" x2="6" y2="18" class="close"></line>
            <line x1="6" y1="6" x2="18" y2="18" class="close"></line>
          </svg>
        </button>
        <ul id="menu-items" class="d-none d-sm-flex">
          <li>
            <a href="/posts/" class={activeNav === "posts" ? "active" : ""}>
              Makala
            </a>
          </li>
          <li>
            <a href="/tags/" class={activeNav === "tags" ? "active" : ""}>
              Tags
            </a>
          </li>
          <li>
            <a href="/about/" class={activeNav === "about" ? "active" : ""}>
              Kuhusu Sisi
            </a>
          </li>
          <li>
            <LinkButton
              href="/search/"
              className={`focus-outline p-3 p-sm-1 ${
                activeNav === "search" ? "active" : ""
              } d-flex`}
              ariaLabel="search"
              title="Search"
            >
              <svg xmlns="http://www.w3.org/2000/svg" class="search-icon"
                ><path
                  d="M19.023 16.977a35.13 35.13 0 0 1-1.367-1.384c-.372-.378-.596-.653-.596-.653l-2.8-1.337A6.962 6.962 0 0 0 16 9c0-3.859-3.14-7-7-7S2 5.141 2 9s3.14 7 7 7c1.763 0 3.37-.66 4.603-1.739l1.337 2.8s.275.224.653.596c.387.363.896.854 1.384 1.367l1.358 1.392.604.646 2.121-2.121-.646-.604c-.379-.372-.885-.866-1.391-1.36zM9 14c-2.757 0-5-2.243-5-5s2.243-5 5-5 5 2.243 5 5-2.243 5-5 5z"
                ></path>
              </svg>
              <span class="visually-hidden">Search</span>
            </LinkButton>
          </li>
          {
            SITE.lightAndDarkMode && (
              <li>
                <button
                  id="theme-btn"
                  class="focus-outline"
                  title="Toggles light & dark"
                  aria-label="auto"
                  aria-live="polite"
                >
                  <svg
                    xmlns="http://www.w3.org/2000/svg"
                    id="moon-svg"
                    class="theme-icon"
                  >
                    <path d="M20.742 13.045a8.088 8.088 0 0 1-2.077.271c-2.135 0-4.14-.83-5.646-2.336a8.025 8.025 0 0 1-2.064-7.723A1 1 0 0 0 9.73 2.034a10.014 10.014 0 0 0-4.489 2.582c-3.898 3.898-3.898 10.243 0 14.143a9.937 9.937 0 0 0 7.072 2.93 9.93 9.93 0 0 0 7.07-2.929 10.007 10.007 0 0 0 2.583-4.491 1.001 1.001 0 0 0-1.224-1.224zm-2.772 4.301a7.947 7.947 0 0 1-5.656 2.343 7.953 7.953 0 0 1-5.658-2.344c-3.118-3.119-3.118-8.195 0-11.314a7.923 7.923 0 0 1 2.06-1.483 10.027 10.027 0 0 0 2.89 7.848 9.972 9.972 0 0 0 7.848 2.891 8.036 8.036 0 0 1-1.484 2.059z" />
                  </svg>
                  <svg
                    xmlns="http://www.w3.org/2000/svg"
                    id="sun-svg"
                    class="theme-icon"
                  >
                    <path d="M6.993 12c0 2.761 2.246 5.007 5.007 5.007s5.007-2.246 5.007-5.007S14.761 6.993 12 6.993 6.993 9.239 6.993 12zM12 8.993c1.658 0 3.007 1.349 3.007 3.007S13.658 15.007 12 15.007 8.993 13.658 8.993 12 10.342 8.993 12 8.993zM10.998 19h2v3h-2zm0-17h2v3h-2zm-9 9h3v2h-3zm17 0h3v2h-3zM4.219 18.363l2.12-2.122 1.415 1.414-2.12 2.122zM16.24 6.344l2.122-2.122 1.414 1.414-2.122 2.122zM6.342 7.759 4.22 5.637l1.415-1.414 2.12 2.122zm13.434 10.605-1.414 1.414-2.122-2.122 1.414-1.414z" />
                  </svg>
                </button>
              </li>
            )
          }
        </ul>
      </nav>
    </div>
  </div>
  <Hr />
</header>

<style>
  #skip-to-content {
    position: absolute;
    top: -100%;
    left: 1rem;
    z-index: 50;
    background-color: var(--bs-primary);
    color: var(--bs-body-bg);
    padding: 0.5rem 0.75rem;
    transition: top 0.2s ease-in-out;
  }
  #skip-to-content:focus {
    top: 1rem;
  }
  .nav-container {
    max-width: 48rem;
    width: 100%;
    margin: 0 auto;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: space-between;
  }
  .top-nav-wrap {
    position: relative;
    display: flex;
    width: 100%;
    align-items: flex-start;
    justify-content: space-between;
    padding: 1rem;
  }
  .logo {
    position: absolute;
    padding: 0.25rem 0;
    font-size: 1.25rem;
    font-weight: 600;
  }
  .hamburger-menu {
    align-self: flex-end;
    padding: 0.5rem;
    border: 1px solid rgba(var(--color-border), 0.8);
    border-radius: 0.5rem;
    background-color: rgb(var(--color-card));
  }
  .hamburger-menu svg {
    width: 1.5rem;
    height: 1.5rem;
    color: var(--bs-body-color);
    transform: scale(1.25);
  }

  nav {
    display: flex;
    width: 100%;
    flex-direction: column;
    align-items: center;
  }
  nav ul {
    margin-top: 1rem;
    display: grid;
    width: 11rem;
    grid-template-columns: repeat(2, minmax(0, 1fr));
    grid-template-rows: repeat(4, minmax(0, 1fr));
    gap: 0.5rem;
    padding-left: 0;
    list-style: none;
  }
  nav ul li {
    grid-column: span 2;
    display: flex;
    align-items: center;
    justify-content: center;
  }
  nav ul li a {
    width: 100%;
    padding: 0.75rem 1rem;
    text-align: center;
    font-weight: 500;
    color: inherit;
    text-decoration: none;
  }
  nav ul li a:hover,
  nav ul li a:focus-visible {
    color: var(--bs-primary);
  }
  nav ul li:nth-last-child(2) a {
    width: auto;
  }
  nav ul li:nth-last-child(1),
  nav ul li:nth-last-child(2) {
    grid-column: span 1;
  }
  nav a.active {
    text-decoration: underline wavy;
    text-decoration-thickness: 2px;
    text-underline-offset: 0.25rem;
  }
  nav a.active svg {
    color: var(--bs-primary);
  }

  nav button {
    padding: 0.25rem;
  }
  nav button svg {
    width: 1.5rem;
    height: 1.5rem;
    color: var(--bs-body-color);
  }
  nav button:hover svg,
  nav button:focus-visible svg {
    color: var(--bs-primary);
  }
  #theme-btn {
    padding: 0.75rem;
    border: 1px solid rgba(var(--color-border), 0.8);
    border-radius: 0.5rem;
    background-color: rgb(var(--color-card));
  }
  #theme-btn svg {
    transform: scale(1.25);
    transition: transform 0.15s ease-in-out;
  }
  #theme-btn:hover svg {
    transform: scale(1.25) rotate(12deg);
  }
  .search-icon {
    transform: scale(1.25);
  }

  .menu-icon line {
    transition: opacity 0.075s ease-in-out;
  }
  .menu-icon .close {
    opacity: 0;
  }
  .menu-icon.is-active .line {
    opacity: 0;
  }
  .menu-icon.is-active .close {
    opacity: 1;
  }

  @media (min-width: 576px) {
    .nav-container {
      flex-direction: row;
    }
    .top-nav-wrap {
      align-items: center;
      padding: 2rem 1rem;
    }
    .logo {
      position: static;
      font-size: 1.5rem;
    }
    .hamburger-menu {
      display: none;
    }
    nav {
      margin-left: 0.5rem;
      flex-direction: row;
      justify-content: flex-end;
    }
    nav ul {
      margin-top: 0;
      width: auto;
      display: flex;
      gap: 1.25rem;
    }
    nav ul li a {
      padding: 0.25rem 0.5rem;
    }
    #theme-btn {
      padding: 0.25rem;
    }
    #theme-btn svg {
      transform: scale(1);
    }
    .search-icon {
      transform: scale(1);
    }
  }
</style>

<script>
  function toggleNav() {
    // Toggle menu
    const menuBtn = document.querySelector(".hamburger-menu");
    const menuIcon = document.querySelector(".menu-icon");
    const menuItems = document.querySelector("#menu-items");

    menuBtn?.addEventListener("click", () => {
      const menuExpanded = menuBtn.getAttribute("aria-expanded") === "true";
      menuIcon?.classList.toggle("is-active");
      menuBtn.setAttribute("aria-expanded", menuExpanded ? "false" : "true");
      menuBtn.setAttribute(
        "aria-label",
        menuExpanded ? "Open Menu" : "Close Menu"
      );
      menuItems?.classList.toggle("d-none");
    });
  }

  toggleNav();

  // Runs on view transitions navigation
  document.addEventListener("astro:after-swap", toggleNav);
</script>
