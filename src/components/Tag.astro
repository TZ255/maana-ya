---
export interface Props {
  tag: string;
  size?: "sm" | "lg";
}

const { tag, size = "sm" } = Astro.props;
---

<li class={`d-inline-block ${size === "sm" ? "my-1" : "my-3 mx-1"}`}>
  <a
    href={`/tags/${tag}/`}
    transition:name={tag}
    class={`tag-link badge rounded-pill ${size === "sm" ? "fs-6" : "fs-5"}`}
  >
    <span>{tag}</span>
  </a>
</li>

<style>
  .tag-link {
    background-color: rgba(var(--color-accent), 0.12);
    color: var(--bs-body-color);
    border: 1px solid rgba(var(--color-border), 0.7);
    text-decoration: none;
    padding: 0.4rem 0.85rem;
    font-weight: 500;
    transition:
      transform 0.15s ease-in-out,
      background-color 0.15s ease-in-out,
      color 0.15s ease-in-out,
      border-color 0.15s ease-in-out;
  }
  .tag-link:hover,
  .tag-link:focus-visible {
    color: var(--bs-primary);
    background-color: rgba(var(--color-accent), 0.18);
    border-color: rgba(var(--color-accent), 0.35);
    transform: translateY(-1px);
  }
</style>
