---
import { SITE } from "@config";
import Layout from "@layouts/Layout.astro";
import Header from "@components/Header.astro";
import Footer from "@components/Footer.astro";
import LinkButton from "@components/LinkButton.astro";
---

<Layout title={`404 Not Found | ${SITE.title}`}>
  <Header />

  <main id="main-content">
    <div class="not-found-wrapper content-card text-center">
      <h1 aria-label="404 Not Found">404</h1>
      <span aria-hidden="true">¯\_(ツ)_/¯</span>
      <p>Page Not Found</p>
      <LinkButton
        href="/"
        className="my-4 fs-5 underline-dashed underline-offset-lg"
      >
        Go back home
      </LinkButton>
    </div>
  </main>

  <Footer />
</Layout>

<style>
  #main-content {
    max-width: 48rem;
    width: 100%;
    margin: 0 auto;
    display: flex;
    flex: 1;
    align-items: center;
    justify-content: center;
    padding: 0 1.5rem;
  }
  .not-found-wrapper {
    margin-bottom: 3.5rem;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
  }
  .not-found-wrapper h1 {
    font-size: 8rem;
    font-weight: 700;
    color: var(--bs-primary);
  }
  .not-found-wrapper p {
    margin-top: 1rem;
    font-size: 1.5rem;
  }
  @media (min-width: 576px) {
    .not-found-wrapper p {
      font-size: 1.875rem;
    }
  }
</style>
